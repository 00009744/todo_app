extends layout.pug 

block content
  div.contain
    h1 All tasks 
    
    if deleted
      p.success Task was deleted!
    if tasks.length
      each task in tasks
        div.task-wrapper
          a.task(href=`/tasks/${ task.id }`) #{ task.name }
          a.remove(href=`/${ task.id }/delete`) remove task
    else 
      h2 No tasks available! ğŸ¤”
    